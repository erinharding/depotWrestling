<p id="notice"><%= notice %></p>

<h1>Listing Wrestlers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Biography</th>
      <th>Image url</th>
      <th>Ranking</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wrestlers.each do |wrestler| %>
      <tr>
        <td><%= wrestler.name %></td>
        <td><%= wrestler.biography %></td>
        <td><%= wrestler.image_url %></td>
        <td><%= wrestler.ranking %></td>
        <td><%= wrestler.weight %></td>
        <td><%= link_to 'Show', wrestler %></td>
        <td><%= link_to 'Edit', edit_wrestler_path(wrestler) %></td>
        <td><%= link_to 'Destroy', wrestler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

